<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/collection_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/collection_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="摄影 | 当火车驶进那片花海"
        android:layout_toRightOf="@id/collection_img"
        android:layout_alignTop="@id/collection_img"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/collection_pubdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7小时前"
        android:layout_alignLeft="@id/collection_subject"
        android:layout_alignBottom="@id/collection_img"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/collection_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="背包客"
        android:layout_toRightOf="@id/collection_pubdate"
        android:layout_alignTop="@id/collection_pubdate"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/collection_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/collection_sort"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_comment_grey"
        android:layout_toRightOf="@id/collection_sort"
        android:text="16"/>

    <TextView
        android:id="@+id/collection_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/collection_sort"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_share_grey"
        android:layout_toRightOf="@id/collection_views"
        android:text="16"/>
</RelativeLayout>