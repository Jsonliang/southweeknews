<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f1f1"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/my_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/pic_my_bg"
        android:adjustViewBounds="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/my_bg"
        android:background="#a11d1d"
        android:alpha="0.9"
        android:layout_alignBottom="@id/my_bg"/>
    <ImageButton
        android:id="@+id/my_goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_back_white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <ImageButton
        android:id="@+id/my_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_my_edit"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_user_img"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        fresco:placeholderImage="@drawable/pic_headphoto_normal"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/my_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/my_user_img"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:text="TestDemo_9120"/>
    <TextView
        android:id="@+id/my_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_my_collect"
        android:layout_below="@id/my_bg"
        android:text="我的收藏"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/ic_split_more"
        android:layout_marginBottom="1px"
        android:drawablePadding="10dp"/>
    <TextView
        android:id="@+id/my_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_my_collect"
        android:layout_below="@id/my_collection"
        android:text="我的评论"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/ic_split_more"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"/>
    <TextView
        android:id="@+id/my_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_comment"
        android:text="退出登录"
        android:gravity="center"
        android:padding="15dp"
        android:background="#ffffff"
        android:textColor="#ff00"
        android:layout_marginBottom="1px"
        android:drawablePadding="10dp"/>
</RelativeLayout>