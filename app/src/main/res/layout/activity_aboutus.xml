<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/aboutus_toolbar"
        layout="@layout/tool_bar"

        />
    <ImageView
        android:id="@+id/aboutus_logo"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/aboutus_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_logo"/>

    <TextView
        android:id="@+id/app_verson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v4.1.4"
        android:layout_marginTop="20dp"
        android:layout_below="@id/aboutus_logo"
        android:layout_centerHorizontal="true"
        />

    <View
        android:id="@+id/line"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:alpha="0.2"
        android:layout_below="@id/app_verson"
        />
    <TextView
        android:layout_below="@id/line"
        android:id="@+id/aboutus_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这里是内容"
        android:padding="15dp"
        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:alpha="0.2"
        android:layout_below="@id/aboutus_content"
        />
    




</RelativeLayout>