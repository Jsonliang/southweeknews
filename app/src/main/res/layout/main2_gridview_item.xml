<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main2_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main2_gridview_item_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77B6B6B6"
            android:alpha="0.3"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/main2_gridview_item_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#fc0122"
                android:text="天下"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/main2_gridview_item_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/main2_gridview_item_source"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/main2_gridview_item_share_count"
                android:drawableLeft="@drawable/ic_comment_white"
                android:text="43"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/main2_gridview_item_share_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/main2_gridview_item_source"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_share_white"
                android:text="52"
                android:textColor="#fff" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/main2_gridview_item_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:text="索贿为何总瞄准中国游客索贿为何总瞄准中国游客"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/main2_gridview_item_display_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="5月20日" />
    </RelativeLayout>
</LinearLayout>

