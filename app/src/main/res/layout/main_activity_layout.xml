<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">
    <RelativeLayout
        android:background="#A80D0B"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/mainActivity_menu"
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_navbar_menu"
            android:layout_margin="15dp"/>
        <ImageView
            android:id="@+id/mainActivity_tittle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_nav_logo_white"/>

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/mainActivity_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_hotel_search_white"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mainActivity_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#ffff0000"
        android:dividerHeight="10dp">

    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_fab"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_nav_backtop_normal"
        />
</LinearLayout>